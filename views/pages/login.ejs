
<div class="login-form">    
    <form action="/check_login" method="post">
		<div class="avatar"><i class="material-icons">&#xE7FF;</i></div>
		<h4 class="modal-title">Login to Your Account</h4>
		<% if(errors) { %>
			<div class=”alert alert-danger”>
			  <% errors.forEach(err => { %>
				<p><%= err.message %></p>
			  <% }); %>
			</div>
		  <% } %>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="username" value="<%=user.username%>">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="password" value="<%=user.password%>" >
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login">              
    </form>			
    <div class="text-center small">Don't have an account? <a href="/register">Sign up</a></div>
</div>                                		                            