<div class="login-form">    
    <form action="/do_register" method="post">
		<div class="avatar"><i class="material-icons">&#xE7FF;</i></div>
		<h4 class="modal-title">Register to Your Account</h4>
		<% if(errors) { %>
			<div class=”alert alert-danger”>
			  <% errors.forEach(err => { %>
				<p><%= err.message %></p>
			  <% }); %>
			</div>
		  <% } %>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="username" value="<%=user.username%>">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="password" value="<%=user.password%>" >
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Register">              
    </form>			
    <div class="text-center small">Already have an account? <a href="/login">Sign in</a></div>
</div>                                		                            